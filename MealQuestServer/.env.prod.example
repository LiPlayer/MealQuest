# Runtime
NODE_ENV=production
PORT=3030
LOG_LEVEL=warn

# Storage (PostgreSQL)
MQ_DB_URL=postgres://user:password@127.0.0.1:5432/mealquest
MQ_DB_SCHEMA=public
MQ_DB_STATE_TABLE=mealquest_state_snapshots
MQ_DB_SNAPSHOT_KEY=main
MQ_DB_POOL_MAX=10

# Security
# Replace with secrets manager values
MQ_JWT_SECRET=prod-jwt-secret-change-me
MQ_PAYMENT_CALLBACK_SECRET=prod-callback-secret-change-me

# Payment provider strategy
# Start with mock; switch to real supplier when contract is ready
MQ_PAYMENT_PROVIDER=mock
MQ_PAYMENT_PROVIDER_BASE_URL=
MQ_PAYMENT_PROVIDER_MERCHANT_ID=
MQ_PAYMENT_PROVIDER_API_KEY=

# Invoice provider strategy
MQ_INVOICE_PROVIDER=mock
MQ_INVOICE_PROVIDER_BASE_URL=
MQ_INVOICE_PROVIDER_API_KEY=
