{
  "name": "mealquest-server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node -r ts-node/register/transpile-only src/http/server.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "npm run typecheck && npm run policyos:validate-templates && node -r ts-node/register/transpile-only --test --test-concurrency=1 \"test/**/*.test.ts\"",
    "test:smoke": "node -r ts-node/register/transpile-only scripts/smoke-local-server.ts",
    "onboard:merchant": "node -r ts-node/register/transpile-only scripts/onboard-merchant.ts",
    "policyos:retention": "node -r ts-node/register/transpile-only scripts/policyos-retention-job.ts",
    "policyos:validate-templates": "node -r ts-node/register/transpile-only scripts/policyos-validate-templates.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.3.61",
    "@langchain/deepseek": "^0.1.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.27",
    "pg": "^8.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
